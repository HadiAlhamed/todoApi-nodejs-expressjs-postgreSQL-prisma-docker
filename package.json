{
  "name": "chapter_4",
  "version": "1.0.0",
  "description": "A Dockerized full stack todo application that uses a NodeJS backend , a PostgreSQL database , a Prisma ORM and JWT Authentication.",
  "main": "./src/app.js",
  "type": "module",
  "scripts": {
    "start": "node ./src/app.js",
    "dev": "node --watch --env-file=.env --experimental-strip-types --experimental-sqlite  ./src/app.js",
    "lint": "eslint ./src/",
    "lint:fix": "eslint --fix ./src/",
    "format": "prettier --write ./src/",
    "format:check": "prettier --check ./src/",
    "fix-all": "npm run lint:fix && npm run format",
    "precommit": "npm run lint && npm run format:check"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "@prisma/client": "^7.2.0",
    "bcryptjs": "^3.0.3",
    "cors": "^2.8.5",
    "dotenv": "^17.2.3",
    "express": "^5.2.1",
    "express-rate-limit": "^8.2.1",
    "helmet": "^8.1.0",
    "http-status-codes": "^2.3.0",
    "jsonwebtoken": "^9.0.3",
    "pg": "^8.16.3",
    "prisma": "^7.2.0",
    "xss-clean": "^0.1.4"
  },
  "devDependencies": {
    "@eslint/js": "^9.39.2",
    "eslint": "^9.39.2",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-prettier": "^5.5.4",
    "globals": "^16.5.0",
    "nodemon": "^3.1.11"
  }
}
